<div class="container">
    <div class="card w-100 mt-4">
        <h4 class="card-header">
           Artikel anzeigen
        </h4>
        <div>
            <div class="row">
                <div class="col-2">
                    Titel
                </div> 
                <div class="col-10">
                    <%= duy.titel %>
                </div>
            </div>
            
            <div class="row">
                <div class="col-2">
                    Beschreibung
                </div> 
                <div class="col-10">
                    <%= duy.shortDescription %>
                </div>
            </div>
            <% if(duy.category) { %>
                <div class="row">
                    <div class="col-2">
                        Kategorie
                    </div> 
                    <div class="col-10">
                        <%= duy.category.name %>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</div>