<div class="container">
    <form action="/duy" method="post">
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Titel</label>
                <input type="text" class="form-control" maxlength="120" name="titel">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Beschreibung</label>
                <textarea class="form-control" maxlength="400" rows="3" name="shortDescription"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-form-label-lg">Kategorie</label>
            <select class="form-select" name="category">
                <% categories.forEach(function(category){ %>
                    <option value="<%= category.id %>">
                        <%= category.name %>
                    </option>
                    <% }); %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Hinzuf√ºgen</button>
    </form>
</div>