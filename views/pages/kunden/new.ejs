<div class="main-container">
    <form action="/kunden" method="POST" onsubmit="return validateForm()">
        <label for="email">E-Mail:</label>
        <input type="email" id="email" name="email" required>
    
        <label for="lastname">Nachname:</label>
        <input type="text" id="lastname" name="nachnahme" required>
    
        <label for="firstname">Name:</label>
        <input type="text" id="firstname" name="name" required>
    
        <label for="phone">Telefon:</label>
        <input type="tel" id="phone" name="telefon">
    
        <label for="password">Passwort:</label>
        <input type="password" id="password" name="passwort" required minlength="8">
    
        <label for="username">Benutzername:</label>
        <input type="text" id="username" name="brnutzerName" required>
    
        <button type="submit" class="btn btn-primary">Hinzufügen</button>
    </form>
</div>

<script>
    function validateForm() {
        const passwordInput = document.getElementById('password');
        const passwordValue = passwordInput.value;

        // Überprüfen Sie die Bedingungen für das Passwort
        if (passwordValue.length < 8) {
            alert('Das Passwort muss mindestens 8 Zeichen lang sein.');
            return false; // Das Formular wird nicht gesendet
        }

        if (!/[!@#$%^&*(),.?":{}|<>]/.test(passwordValue)) {
            alert('Das Passwort muss mindestens ein Sonderzeichen enthalten.');
            return false; // Das Formular wird nicht gesendet
        }

        if (!/[A-Z]/.test(passwordValue)) {
            alert('Das Passwort muss mindestens einen Großbuchstaben enthalten.');
            return false; // Das Formular wird nicht gesendet
        }

        return true; // Das Formular wird gesendet
    }
</script>
