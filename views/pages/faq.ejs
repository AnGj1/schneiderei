  <script>
    const searchInput = document.getElementById('searchInput');
    const filterSelect = document.getElementById('filterSelect');
    const cards = Array.from(document.getElementsByClassName('card'));
    
    searchInput.addEventListener('keyup', filterFAQ);
    filterSelect.addEventListener('change', filterFAQ);
    
    function filterFAQ() {
      const searchTerm = searchInput.value.toLowerCase();
      const filter = filterSelect.value;
      
      cards.forEach(card => {
        const question = card.querySelector('.btn-link').textContent.toLowerCase();
        const answer = card.querySelector('.card-body').textContent.toLowerCase();
        
        const matchQuestion = question.includes(searchTerm);
        const matchAnswer = answer.includes(searchTerm);
        
        let displayCard = true;
        
        if (filter === 'question') {
          displayCard = matchQuestion;
        } else if (filter === 'answer') {
          displayCard = matchAnswer;
        } else if (filter === 'all') {
          displayCard = matchQuestion || matchAnswer;
        }
        
        card.style.display = displayCard ? 'block' : 'none';
      });
    }
  </script>