<div class="container">
    <h1>Kundenbewertung abgeben</h1>

        <form action="/bewertung-submit" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name"><br>

        <label for="bewertung">Bewertung:</label>
        <select id="bewertung" name="bewertung">
            <option value="ausgezeichnet">Ausgezeichnet</option>
            <option value="gut">Gut</option>
            <option value="befriedigend">Befriedigend</option>
            <option value="ausreichend">Ausreichend</option>
            <option value="mangelhaft">Mangelhaft</option>
        </select><br>

        <label for="kommentar">Kommentar:</label><br>
        <textarea id="kommentar" name="kommentar" rows="4" cols="50"></textarea><br>

        <input type="submit" value="Bewertung abgeben">
        </form>

</div>