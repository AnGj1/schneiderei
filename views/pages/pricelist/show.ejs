<div class="container">
    <div class="card w-100 mt-4">
        <h4 class="card-header">
            Prisliste anzeigen
        </h4>
        <div>
            <div class="row">
                <div class="col-2">
                    Name
                </div> 
                <div class="col-10">
                    <%= Pricelist.name %>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    Preis
                </div> 
                <div class="col-10">
                    <%= Pricelist.price %>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    Beschreibung
                </div> 
                <div class="col-10">
                    <%= Pricelist.description %>
                </div>
            </div>
            <% if(Pricelist.category) { %>
                <div class="row">
                    <div class="col-2">
                        Kategorie
                    </div> 
                    <div class="col-10">
                        <%= Pricelist.category.name %>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</div>